<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

    <description>
     Annotator Web App.
    </description>
    <display-name>Simple Annotation Web Service for MVD documents</display-name>

    <servlet>
      <servlet-name>AnnotatorWebApp</servlet-name>
      <servlet-class>annotator.AnnotatorWebApp</servlet-class>
    </servlet>

    <context-param>
        <param-name>repository</param-name>
        <param-value>MONGO</param-value>
    </context-param>
    <context-param>
        <param-name>dbPort</param-name>
        <param-value>27017</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>jabberw0cky</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>webRoot</param-name>
        <param-value>/var/www</param-value>
    </context-param>
    <context-param>
        <param-name>host</param-name>
        <param-value>localhost</param-value>
    </context-param>

    <servlet-mapping>
        <servlet-name>AnnotatorWebApp</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-app>
